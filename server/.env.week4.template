# Week 4 Environment Variables - HuggingFace + LangChain
# ========================================================
# Add these to your existing .env file

# HuggingFace Configuration
# Get free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# HuggingFace Model (Llama-3.2-3B-Instruct recommended)
# Options: meta-llama/Llama-3.2-3B-Instruct, mistralai/Mistral-7B-Instruct-v0.1
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct

# LangChain Configuration
LANGCHAIN_MAX_RETRIES=3
LANGCHAIN_TIMEOUT=120

# Mock POI Configuration
MOCK_POI_ENABLED=True

