{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "${workspaceFolder}/server/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}/server",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1",
                "CELERY_BROKER_URL": "redis://localhost:6379/0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "python": "${workspaceFolder}/server/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}/server",
            // "env": {
            //     "CELERY_BROKER_URL": "redis://localhost:6379/0"
            // },
            "args": [
                "-A",
                "celery_worker.celery",
                "worker",
                "--loglevel=info"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Celery Beat",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "python": "${workspaceFolder}/server/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}/server",
            "env": {
                "CELERY_BROKER_URL": "redis://localhost:6379/1"
            },
            "args": [
                "-A",
                "celery_worker.celery",
                "beat",
                "--loglevel=info"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "NPM: npm run dev (client)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm.cmd",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "env": {
                "BROWSER": "none"
            }
        }
    ],
    "compounds": [
        {
            "name": "Flask + Celery (Worker + Beat)",
            "configurations": [
                "Python Debugger: Flask",
                "Python Debugger: Celery Worker",
                "Python Debugger: Celery Beat"
            ]
        },
        {
            "name": "Flask + Celery Worker + NPM Client",
            "configurations": [
                "Python Debugger: Flask",
                "Python Debugger: Celery Worker",
                "NPM: npm run dev (client)"
            ]
        }
    ]
}
