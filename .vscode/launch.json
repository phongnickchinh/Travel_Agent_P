{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "P:/coddd/Travel_Agent_P/server/.venv/Scripts/python.exe",
            "cwd": "P:/coddd/Travel_Agent_P/server",  // 👈 thêm dòng này
            "env": {
                "FLASK_APP": "run.py",               // 👈 bỏ "server\\" vì cwd đã trỏ tới /server
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}
